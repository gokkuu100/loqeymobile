<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust user-installed CA certificates (for testing with self-signed certs) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust pre-installed CAs -->
            <certificates src="system" />
            <!-- Additionally trust user added CAs (like self-signed) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- For development/testing: trust all certificates for your AWS server -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">44.222.118.140</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
</network-security-config>
